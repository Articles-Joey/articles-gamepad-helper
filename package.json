{
  "name": "@articles-media/articles-gamepad-helper",
  "description": "Shared code and assets for games using React.js and gamepad/controller input, including a pie menu and on-screen controller keyboard.",
  "version": "0.0.7",
  "type": "module",
  "imports": {
    "#root/src/*": "./src/*",
    "#root/dist/*": "./dist/*",
    "#root/public/*": "./public/*"
  },
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "files": [
    "dist"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Articles-Joey/articles-gamepad-helper.git"
  },
  "exports": {
    ".": {
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./GamepadPreview": {
      "import": "./dist/GamepadPreview.js",
      "require": "./dist/GamepadPreview.cjs"
    },
    "./GamepadKeyboard": {
      "import": "./dist/GamepadKeyboard.js",
      "require": "./dist/GamepadKeyboard.cjs"
    },
    "./PieMenu": {
      "import": "./dist/PieMenu.js",
      "require": "./dist/PieMenu.cjs"
    },
    "./PieKeyboard": {
      "import": "./dist/PieKeyboard.js",
      "require": "./dist/PieKeyboard.cjs"
    },
    "./XboxIcons": {
      "import": "./dist/XboxIcons.js",
      "require": "./dist/XboxIcons.cjs"
    },
    "./SteamIcons": {
      "import": "./dist/SteamIcons.js",
      "require": "./dist/SteamIcons.cjs"
    },
    "./useGameControllerKeyboardStore": {
      "import": "./dist/useGameControllerKeyboardStore.js",
      "require": "./dist/useGameControllerKeyboardStore.cjs"
    },
    "./usePieMenuStore": {
      "import": "./dist/usePieMenuStore.js",
      "require": "./dist/usePieMenuStore.cjs"
    },
    "./attributions": {
      "import": "./dist/attributions.json",
      "require": "./dist/attributions.json"
    },
    "./credits": {
      "import": "./dist/credits.json",
      "require": "./dist/credits.json"
    },
    "./dist/img/*": "./dist/img/*",
    "./dist/style.css": "./dist/articles-gamepad-helper.css",
    "./dist/articles-gamepad-helper.css": "./dist/articles-gamepad-helper.css"
  },
  "scripts": {
    "dev-unknown": "vite dev",
    "dev": "nodemon --watch src --ext js,ts,css,scss,jsx,json --ignore dist --exec \"npm run build\"",
    "build": "vite build",
    "preview": "vite preview",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [],
  "author": "Articles Media",
  "license": "ISC",
  "peerDependencies": {
    "react": ">=19.2.3",
    "react-dom": ">=19.2.3"
  },
  "devDependencies": {
    "@vitejs/plugin-react": "^5.1.2",
    "classnames": "^2.5.1",
    "nodemon": "^3.1.11",
    "react-bootstrap": "^2.10.10",
    "sass": "^1.97.2",
    "vite": "^7.3.1"
  },
  "dependencies": {
    "zustand": "^5.0.10"
  }
}